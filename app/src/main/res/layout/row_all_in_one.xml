<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_1sdp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImgAllCoverPhoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_banner_one" />

        <ImageView
            android:layout_width="@dimen/_55sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_sponsored" />

        <ImageView
            android:id="@+id/ivAllHeart"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_2sdp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_heart_unselect" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvAllTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:ellipsize="end"
        android:fontFamily="@font/helvetica"
        android:maxLines="1"
        android:text="2 BHK flat Spring Vally"
        android:textColor="@color/txt_clr"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/hs_office_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_cabin" />

            <TextView
                android:id="@+id/txt_office_val_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/helvetica"
                android:src="@drawable/ic_bed_icon"
                android:text="2"
                android:textColor="@color/txt_clr"
                android:textSize="@dimen/_9sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_furnished" />

            <TextView
                android:id="@+id/txt_office_val_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/helvetica"
                android:gravity="center"
                android:src="@drawable/ic_bed_icon"
                android:text="21000"
                android:textColor="@color/txt_clr"
                android:textSize="@dimen/_9sdp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_squrefeet_icon" />

            <TextView
                android:id="@+id/txt_office_val_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/helvetica"
                android:gravity="center"
                android:src="@drawable/ic_bed_icon"
                android:text="2nd"
                android:textColor="@color/txt_clr"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/hs_real_estate_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_real_estate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_bed_icon" />

            <TextView
                android:id="@+id/txt_val_real_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/helvetica"
                android:src="@drawable/ic_bed_icon"
                android:text="2"
                android:textColor="@color/txt_clr"
                android:textSize="@dimen/_9sdp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_bathroom_icon" />

            <TextView
                android:id="@+id/txt_val_real_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/helvetica"
                android:gravity="center"
                android:src="@drawable/ic_bed_icon"
                android:text="2"
                android:textColor="@color/txt_clr"
                android:textSize="@dimen/_9sdp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_squrefeet_icon" />

            <TextView
                android:id="@+id/txt_val_real_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/helvetica"
                android:gravity="center"
                android:src="@drawable/ic_bed_icon"
                android:text="1800"
                android:textColor="@color/txt_clr"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/hs_mobile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_ram" />

            <TextView
                android:id="@+id/txt_mobile_val_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/helvetica"
                android:src="@drawable/ic_bed_icon"
                android:text="2 GB Ram"
                android:textColor="@color/txt_clr"
                android:textSize="@dimen/_9sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_storage" />

            <TextView
                android:id="@+id/txt_mobile_val_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/helvetica"
                android:gravity="center"
                android:src="@drawable/ic_bed_icon"
                android:text="64 GB Rom"
                android:textColor="@color/txt_clr"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/hs_car_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_car_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/txt_car_val_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/helvetica"
                android:src="@drawable/ic_bed_icon"
                android:text="2"
                android:textColor="@color/txt_clr"
                android:textSize="@dimen/_9sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_km" />

            <TextView
                android:id="@+id/txt_car_val_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/helvetica"
                android:gravity="center"
                android:src="@drawable/ic_bed_icon"
                android:text="2"
                android:textColor="@color/txt_clr"
                android:textSize="@dimen/_9sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_owner" />

            <TextView
                android:id="@+id/txt_car_val_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/helvetica"
                android:gravity="center"
                android:src="@drawable/ic_bed_icon"
                android:text="1800"
                android:textColor="@color/txt_clr"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvAllPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/helvetica"
        android:text="₹ 999999.99"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_weight="6"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/LocationIconInBrowseCategory"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_location"
                android:tint="@color/fav_bg_clr_trans" />

            <TextView
                android:id="@+id/tvAllTown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:fontFamily="@font/helvetica"
                android:text="re3u4prf"
                android:textColor="@color/fav_bg_clr_trans"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/tvAllCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:fontFamily="@font/helvetica"
                android:text="India"
                android:textColor="@color/fav_bg_clr_trans"
                android:textSize="@dimen/_6sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_weight="4"
            android:fontFamily="@font/helvetica"
            android:gravity="end|center_horizontal"
            android:text="01 AUG, 22"
            android:textColor="@color/txt_clr"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>
</LinearLayout>