<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:background="@drawable/cust_my_ads_border"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_22sdp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/cust_my_ads_header"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_8sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="FROM: "
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/txt_from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="10 FEB 2022"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text=" - TO: "
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/txt_to_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:fontFamily="@font/poppins_regular"
            android:text="12 MAR 2022"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_delete_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_2sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_set_browse_img"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:adjustViewBounds="true"
            android:background="@color/txt_clr"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="OPPO F15 (white)"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/txt_extra_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="4 GB Ram | 64 GB Storage"
                android:textColor="@color/details_txt_clr"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/txt_ad_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Rs. 999999.99"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_14sdp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_visibility"
                    android:tint="@color/details_txt_clr" />

                <TextView
                    android:id="@+id/txt_ad_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Views"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@color/icon_tint" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_my_fav_ads_fill" />

                <TextView
                    android:id="@+id/txt_ad_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Likes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/og_clr" />

    <LinearLayout
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/my_ads_status">

        <TextView
            android:id="@+id/txt_status_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helvetica"
            android:gravity="center"
            android:text="IN PROGRESS"
            android:textColor="@color/white"
            android:textSize="@dimen/_6sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_location_detail"
            android:tint="@color/details_txt_clr" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="This ad is being processed and it will be live soon."
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sell_faster_now"
            android:layout_width="0dp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_120sdp"
            android:layout_weight="7"
            android:background="@drawable/my_ads_btn"
            android:fontFamily="@font/poppins_regular"
            android:letterSpacing="0.1"
            android:text="SELL FASTER NOW"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_post"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="end"
            android:background="@drawable/my_ads_btn"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="EDIT NOW"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>